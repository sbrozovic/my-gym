<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewSender"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewSendersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#fff"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSender"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewSender" />

    <TextView
        android:id="@+id/textViewPartOfMessage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:textAlignment="textStart"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxEms="15"
        android:maxLines="1"
        android:maxWidth="100dp"
        android:text="TextView"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSendersName"
        app:layout_constraintTop_toTopOf="@+id/imageViewSender"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintLeft_toRightOf="@+id/imageViewSender"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/textViewDateOflastMessageInChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#B7C1C1"
        app:layout_constraintTop_toTopOf="@+id/textViewPartOfMessage"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPartOfMessage"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>